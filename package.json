{
  "version": "0.0.1",
  "description": "Passport XYZ Embeddable Widgets",
  "repository": "https://github.com/passportxyz/passport-widgets/widgets",
  "license": "MIT",
  "author": "PassportXYZ",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "browserslist": [
    ">0.2%",
    "not dead",
    "last 2 versions",
    "not IE 11"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc --module ESNext --outDir dist/esm && postcss 'src/**/*.css' -d dist/esm/ --base src",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs && postcss 'src/**/*.css' -d dist/cjs/ --base src",
    "build:types": "tsc --declaration --declarationDir dist --emitDeclarationOnly",
    "dev": "cd example && yarn dev"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.11",
    "axios": "^1.7.7"
  }
}
